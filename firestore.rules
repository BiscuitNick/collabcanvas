rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Shapes collection - allow CRUD operations for authenticated users
    match /shapes/{shapeId} {
      allow read, write: if request.auth != null;
    }
    
    // Cursors collection - allow read for all authenticated users, write only for own cursor
    match /cursors/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Presence collection - allow read for all authenticated users, write only for own presence
    match /presence/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}