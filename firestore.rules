rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Canvas-scoped data model
    match /canvases/{canvasId} {
      // Shapes - allow CRUD for authenticated users
      match /shapes/{shapeId} {
        allow read, write: if request.auth != null;
      }

      // Cursors - allow read for authenticated users; write only to own cursor doc
      match /cursors/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Presence - allow read for authenticated users; write only to own presence doc
      match /presence/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}